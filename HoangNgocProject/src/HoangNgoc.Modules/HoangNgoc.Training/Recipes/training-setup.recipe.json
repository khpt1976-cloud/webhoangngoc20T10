{
  "name": "Training Setup",
  "displayName": "Training Module Setup",
  "description": "Sets up the Training module with content types, taxonomies, and sample data",
  "author": "HoangNgoc Team",
  "website": "https://hoangngocdevelopment.com",
  "version": "1.0.0",
  "issetuprecipe": false,
  "categories": [ "Training" ],
  "tags": [ "training", "courses", "education" ],
  "steps": [
    {
      "name": "feature",
      "enable": [
        "HoangNgoc.Training",
        "OrchardCore.ContentFields",
        "OrchardCore.Autoroute",
        "OrchardCore.Taxonomies",
        "OrchardCore.Media",
        "OrchardCore.Indexing",
        "OrchardCore.Liquid"
      ]
    },
    {
      "name": "ContentDefinition",
      "ContentTypes": [
        {
          "Name": "Course",
          "DisplayName": "Course",
          "Settings": {
            "ContentTypeSettings": {
              "Creatable": true,
              "Listable": true,
              "Draftable": true,
              "Versionable": true,
              "Securable": true
            }
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "1"
                }
              }
            },
            {
              "PartName": "CoursePart",
              "Name": "CoursePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "2"
                }
              }
            },
            {
              "PartName": "AutoroutePart",
              "Name": "AutoroutePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "3"
                },
                "AutoroutePartSettings": {
                  "Pattern": "courses/{{ Model.ContentItem | display_text | slugify }}",
                  "AllowCustomPath": true
                }
              }
            },
            {
              "PartName": "FlowPart",
              "Name": "FlowPart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "4"
                }
              }
            }
          ]
        },
        {
          "Name": "Lesson",
          "DisplayName": "Lesson",
          "Settings": {
            "ContentTypeSettings": {
              "Creatable": true,
              "Listable": true,
              "Draftable": true,
              "Versionable": true,
              "Securable": true
            }
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "1"
                }
              }
            },
            {
              "PartName": "LessonPart",
              "Name": "LessonPart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "2"
                }
              }
            },
            {
              "PartName": "AutoroutePart",
              "Name": "AutoroutePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "3"
                },
                "AutoroutePartSettings": {
                  "Pattern": "lessons/{{ Model.ContentItem | display_text | slugify }}",
                  "AllowCustomPath": true
                }
              }
            }
          ]
        },
        {
          "Name": "Enrollment",
          "DisplayName": "Enrollment",
          "Settings": {
            "ContentTypeSettings": {
              "Creatable": true,
              "Listable": true,
              "Draftable": true,
              "Versionable": true,
              "Securable": true
            }
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "1"
                }
              }
            },
            {
              "PartName": "EnrollmentPart",
              "Name": "EnrollmentPart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "2"
                }
              }
            }
          ]
        },
        {
          "Name": "CourseCategory",
          "DisplayName": "Course Category",
          "Settings": {
            "ContentTypeSettings": {
              "Creatable": true,
              "Listable": true,
              "Draftable": true,
              "Versionable": true,
              "Securable": true
            }
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "1"
                }
              }
            },
            {
              "PartName": "TaxonomyPart",
              "Name": "TaxonomyPart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "2"
                },
                "TaxonomyPartSettings": {
                  "TermContentType": "CourseCategoryTerm"
                }
              }
            }
          ]
        },
        {
          "Name": "CourseCategoryTerm",
          "DisplayName": "Course Category Term",
          "Settings": {
            "ContentTypeSettings": {
              "Creatable": true,
              "Listable": true,
              "Draftable": true,
              "Versionable": true,
              "Securable": true
            }
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "1"
                }
              }
            },
            {
              "PartName": "TermPart",
              "Name": "TermPart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "2"
                }
              }
            },
            {
              "PartName": "AutoroutePart",
              "Name": "AutoroutePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "3"
                },
                "AutoroutePartSettings": {
                  "Pattern": "course-categories/{{ Model.ContentItem | display_text | slugify }}",
                  "AllowCustomPath": true
                }
              }
            }
          ]
        }
      ]
    },
    {
      "name": "content",
      "data": [
        {
          "ContentItemId": "course-category-programming",
          "ContentType": "CourseCategory",
          "DisplayText": "Programming",
          "Latest": true,
          "Published": true,
          "TitlePart": {
            "Title": "Programming"
          },
          "TaxonomyPart": {
