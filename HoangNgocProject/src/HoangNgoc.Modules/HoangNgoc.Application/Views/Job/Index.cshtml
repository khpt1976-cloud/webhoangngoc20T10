@model IEnumerable<OrchardCore.ContentManagement.ContentItem>
@{
    ViewData["Title"] = "Available Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2">
                    <i class="fas fa-briefcase text-primary"></i>
                    Available Job Opportunities
                </h1>
                <div class="job-search">
                    <form method="get" action="@Url.Action("Search")" class="form-inline">
                        <div class="input-group">
                            <input type="text" name="query" class="form-control" 
                                   placeholder="Search jobs..." value="@ViewData["Query"]">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var job in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card job-card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="@Url.Action("Details", new { id = job.ContentItemId })" 
                                           class="text-decoration-none">
                                            @job.DisplayText
                                        </a>
                                    </h5>
                                    
                                    @if (job.Content.HtmlBodyPart?.Html != null)
                                    {
                                        <p class="card-text text-muted">
                                            @Html.Raw(job.Content.HtmlBodyPart.Html.ToString().Length > 150 
                                                ? job.Content.HtmlBodyPart.Html.ToString().Substring(0, 150) + "..." 
                                                : job.Content.HtmlBodyPart.Html.ToString())
                                        </p>
                                    }
                                    
                                    <div class="job-meta">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar-alt"></i>
                                            Posted: @job.CreatedUtc?.ToString("dd/MM/yyyy")
                                        </small>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge badge-primary">@job.ContentType</span>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", new { id = job.ContentItemId })" 
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye"></i> View Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle fa-2x mb-3"></i>
                        <h4>No Job Opportunities Available</h4>
                        <p class="mb-0">
                            We don't have any job openings at the moment. 
                            Please check back later or subscribe to our newsletter for updates.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
.job-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    border: 1px solid #e3e6f0;
}

.job-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}

.job-card .card-title a {
    color: #5a5c69;
    font-weight: 600;
}

.job-card .card-title a:hover {
    color: #4e73df;
}

.job-meta {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #e3e6f0;
}

.job-search .input-group {
    min-width: 300px;
}

@@media (max-width: 768px) {
    .d-flex.justify-content-between {
        flex-direction: column;
        align-items: flex-start !important;
    }
    
    .job-search {
        margin-top: 1rem;
        width: 100%;
    }
    
    .job-search .input-group {
        min-width: 100%;
    }
}
</style>
</div>