@model OrchardCore.ContentManagement.ContentItem
@{
    ViewData["Title"] = Model?.DisplayText ?? "Job Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-briefcase"></i>
                        Job Details
                    </h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <a href="@Url.Action("Edit", "Admin", new { area = "OrchardCore.Contents", contentItemId = Model.ContentItemId })" 
                           class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null)
                    {
                        <div class="row">
                            <div class="col-md-8">
                                <h2>@Model.DisplayText</h2>
                                
                                @* Display HTML Body if available *@
                                @if (Model.Content.HtmlBodyPart?.Html != null)
                                {
                                    <div class="job-description">
                                        @Html.Raw(Model.Content.HtmlBodyPart.Html.ToString())
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted">No description available.</p>
                                }
                            </div>
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title">Job Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <dl class="row">
                                            <dt class="col-sm-5">Content Type:</dt>
                                            <dd class="col-sm-7">@Model.ContentType</dd>
                                            
                                            <dt class="col-sm-5">Status:</dt>
                                            <dd class="col-sm-7">
                                                @if (Model.Published)
                                                {
                                                    <span class="badge badge-success">Published</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">Draft</span>
                                                }
                                            </dd>
                                            
                                            <dt class="col-sm-5">Created:</dt>
                                            <dd class="col-sm-7">
                                                <small>@Model.CreatedUtc?.ToString("dd/MM/yyyy HH:mm")</small>
                                            </dd>
                                            
                                            <dt class="col-sm-5">Modified:</dt>
                                            <dd class="col-sm-7">
                                                <small>@Model.ModifiedUtc?.ToString("dd/MM/yyyy HH:mm")</small>
                                            </dd>
                                            
                                            <dt class="col-sm-5">Author:</dt>
                                            <dd class="col-sm-7">@Model.Author</dd>
                                            
                                            <dt class="col-sm-5">ID:</dt>
                                            <dd class="col-sm-7">
                                                <code>@Model.ContentItemId</code>
                                            </dd>
                                        </dl>
                                        
                                        <div class="mt-3">
                                            <a href="@Url.Action("Display", "Item", new { area = "OrchardCore.Contents", contentItemId = Model.ContentItemId })" 
                                               class="btn btn-success btn-block" target="_blank">
                                                <i class="fas fa-external-link-alt"></i> Preview Public View
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Job not found!</strong>
                            <p class="mb-0">The requested job posting could not be found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.job-description {
    margin: 20px 0;
    line-height: 1.6;
}

.job-description h1, .job-description h2, .job-description h3 {
    color: #495057;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
}

.job-description ul, .job-description ol {
    margin-left: 1.5rem;
}

.job-description p {
    margin-bottom: 1rem;
}

.card {
    box-shadow: 0 0 1px rgba(0,0,0,.125), 0 1px 3px rgba(0,0,0,.2);
    border: 0;
}

.badge {
    font-size: 75%;
    font-weight: 700;
}

code {
    font-size: 87.5%;
    color: #e83e8c;
    word-wrap: break-word;
}
</style>