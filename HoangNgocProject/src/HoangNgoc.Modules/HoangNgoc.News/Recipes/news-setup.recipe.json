{
  "name": "HoangNgoc News Setup",
  "displayName": "HoangNgoc News Module Setup",
  "description": "Sets up the News module with content types, taxonomies, and sample data",
  "author": "HoangNgoc Team",
  "website": "https://hoangngocdevelopment.com",
  "version": "1.0.0",
  "issetuprecipe": false,
  "categories": [ "Content" ],
  "tags": [ "news", "content", "hoangnoc" ],
  "steps": [
    {
      "name": "feature",
      "enable": [
        "HoangNgoc.News",
        "OrchardCore.ContentFields",
        "OrchardCore.Autoroute",
        "OrchardCore.Taxonomies",
        "OrchardCore.Media",
        "OrchardCore.Indexing",
        "OrchardCore.Liquid"
      ]
    },
    {
      "name": "ContentDefinition",
      "ContentTypes": [
        {
          "Name": "NewsCategory",
          "DisplayName": "News Category",
          "Settings": {
            "ContentTypeSettings": {
              "Creatable": true,
              "Listable": true,
              "Draftable": false,
              "Versionable": false,
              "Securable": true
            }
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "1"
                }
              }
            },
            {
              "PartName": "TaxonomyPart",
              "Name": "TaxonomyPart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "2"
                },
                "TaxonomyPartSettings": {
                  "TermContentType": "NewsCategoryTerm"
                }
              }
            }
          ]
        },
        {
          "Name": "NewsCategoryTerm",
          "DisplayName": "News Category Term",
          "Settings": {
            "ContentTypeSettings": {
              "Creatable": false,
              "Listable": false,
              "Draftable": false,
              "Versionable": false,
              "Securable": false
            }
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "1"
                }
              }
            },
            {
              "PartName": "AutoroutePart",
              "Name": "AutoroutePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "2"
                },
                "AutoroutePartSettings": {
                  "Pattern": "news/category/{{ Model.ContentItem | display_text | slugify }}",
                  "AllowCustomPath": true
                }
              }
            }
          ]
        },
        {
          "Name": "NewsArticle",
          "DisplayName": "News Article",
          "Settings": {
            "ContentTypeSettings": {
              "Creatable": true,
              "Listable": true,
              "Draftable": true,
              "Versionable": true,
              "Securable": true
            },
            "FullTextAspect": {},
            "ContentIndexSettings": {
              "Included": true,
              "Stored": true,
              "Analyzed": true
            }
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "1"
                }
              }
            },
            {
              "PartName": "HtmlBodyPart",
              "Name": "HtmlBodyPart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "2"
                },
                "HtmlBodyPartSettings": {
                  "Editor": "Wysiwyg"
                }
              }
            },
            {
              "PartName": "NewsArticlePart",
              "Name": "NewsArticlePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "3"
                }
              }
            },
            {
              "PartName": "AutoroutePart",
              "Name": "AutoroutePart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "4"
                },
                "AutoroutePartSettings": {
                  "Pattern": "news/{{ Model.ContentItem | display_text | slugify }}",
                  "AllowCustomPath": true
                }
              }
            },
            {
              "PartName": "TaxonomyPart",
              "Name": "TaxonomyPart",
              "Settings": {
                "ContentTypePartSettings": {
                  "Position": "5"
                },
                "TaxonomyPartSettings": {
                  "TaxonomyContentItemId": "NewsCategories",
                  "DisplayName": "Categories"
                }
              }
            }
          ]
        }
      ]
    },
    {
      "name": "content",
      "data": [
        {
          "ContentItemId": "NewsCategories",
          "ContentType": "NewsCategory",
          "DisplayText": "News Categories",
          "Latest": true,
          "Published": true,
          "TitlePart": {
            "Title": "News Categories"
          },
          "TaxonomyPart": {
            "TermContentType": "NewsCategoryTerm",
            "Terms": [
              {
                "ContentItemId": "tech-category",
                "ContentType": "NewsCategoryTerm",
                "DisplayText": "Công nghệ",
                "TitlePart": {
                  "Title": "Công nghệ"
                }
              },
              {
                "ContentItemId": "business-category",
                "ContentType": "NewsCategoryTerm",
                "DisplayText": "Kinh doanh",
                "TitlePart": {
                  "Title": "Kinh doanh"
                }
              },
              {
                "ContentItemId": "education-category",
                "ContentType": "NewsCategoryTerm",
                "DisplayText": "Đào tạo",
                "TitlePart": {
                  "Title": "Đào tạo"
                }
              }
            ]
          }
        }
      ]
    }
  ]
}