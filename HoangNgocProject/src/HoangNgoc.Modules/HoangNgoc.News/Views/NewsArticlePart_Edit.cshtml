@model HoangNgoc.News.Models.NewsArticlePart

<fieldset class="form-group">
    <legend>Thông tin bài viết</legend>
    
    <div class="form-group">
        <label asp-for="Summary.Text" class="form-label">Tóm tắt</label>
        <textarea asp-for="Summary.Text" class="form-control" rows="3" placeholder="Nhập tóm tắt ngắn gọn về bài viết..."></textarea>
        <span asp-validation-for="Summary.Text" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Author.Text" class="form-label">Tác giả</label>
        <input asp-for="Author.Text" class="form-control" placeholder="Nhập tên tác giả..." />
        <span asp-validation-for="Author.Text" class="text-danger"></span>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PublishedDate.Value" class="form-label">Ngày xuất bản</label>
                <input asp-for="PublishedDate.Value" type="datetime-local" class="form-control" />
                <span asp-validation-for="PublishedDate.Value" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ViewCount.Value" class="form-label">Số lượt xem</label>
                <input asp-for="ViewCount.Value" type="number" class="form-control" min="0" />
                <span asp-validation-for="ViewCount.Value" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="form-check">
            <input asp-for="IsFeatured.Value" type="checkbox" class="form-check-input" />
            <label asp-for="IsFeatured.Value" class="form-check-label">
                Đánh dấu là bài viết nổi bật
            </label>
        </div>
    </div>
</fieldset>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Set default published date to now if empty
    const publishedDateInput = document.querySelector('input[name$="PublishedDate.Value"]');
    if (publishedDateInput && !publishedDateInput.value) {
        const now = new Date();
        const localDateTime = new Date(now.getTime() - now.getTimezoneOffset() * 60000).toISOString().slice(0, 16);
        publishedDateInput.value = localDateTime;
    }
});
</script>