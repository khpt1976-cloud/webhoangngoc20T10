{% comment %}
User Dashboard View - HoangNgoc Theme
Displays user profile, wallet, and activity overview
{% endcomment %}

<div class="user-dashboard" data-animate="fade-in">
    <div class="row">
        <!-- User Profile Card -->
        <div class="col-md-4">
            <div class="card user-profile-card">
                <div class="card-body text-center">
                    <div class="user-avatar">
                        {% if Model.User.Avatar %}
                            <img src="{{ Model.User.Avatar | asset_url }}" alt="{{ Model.User.Name }}" class="avatar-img">
                        {% else %}
                            <div class="avatar-placeholder">
                                <i class="fas fa-user"></i>
                            </div>
                        {% endif %}
                    </div>
                    <h3 class="user-name">{{ Model.User.Name }}</h3>
                    <p class="user-email">{{ Model.User.Email }}</p>
                    <div class="user-stats">
                        <div class="stat-item">
                            <span class="stat-value">{{ Model.User.CoursesCount | default: 0 }}</span>
                            <span class="stat-label">Khóa học</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value">{{ Model.User.CertificatesCount | default: 0 }}</span>
                            <span class="stat-label">Chứng chỉ</span>
                        </div>
                    </div>
                    <a href="{{ '~/Account/Profile' | href }}" class="btn btn-primary">Chỉnh sửa hồ sơ</a>
                </div>
            </div>
        </div>

        <!-- Wallet Card -->
        <div class="col-md-4">
            <div class="card wallet-card">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="fas fa-wallet"></i>
                        Ví điện tử
                    </h4>
                </div>
                <div class="card-body">
                    <div class="wallet-balance">
                        <span class="balance-label">Số dư hiện tại:</span>
                        <span class="balance-amount">{{ Model.Wallet.Balance | currency: "VND" }}</span>
                    </div>
                    <div class="wallet-actions">
                        <a href="{{ '~/Wallet/Deposit' | href }}" class="btn btn-success btn-sm">
                            <i class="fas fa-plus"></i> Nạp tiền
                        </a>
                        <a href="{{ '~/Wallet/History' | href }}" class="btn btn-outline btn-sm">
                            <i class="fas fa-history"></i> Lịch sử
                        </a>
                    </div>
                    <div class="recent-transactions">
                        <h5>Giao dịch gần đây</h5>
                        {% if Model.Wallet.RecentTransactions.size > 0 %}
                            {% for transaction in Model.Wallet.RecentTransactions limit: 3 %}
                                <div class="transaction-item">
                                    <div class="transaction-info">
                                        <span class="transaction-type">{{ transaction.Type }}</span>
                                        <span class="transaction-date">{{ transaction.Date | date: "dd/MM/yyyy" }}</span>
                                    </div>
                                    <span class="transaction-amount {{ transaction.Type | downcase }}">
                                        {{ transaction.Amount | currency: "VND" }}
                                    </span>
                                </div>
                            {% endfor %}
                        {% else %}
                            <p class="no-transactions">Chưa có giao dịch nào</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-md-4">
            <div class="card quick-actions-card">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="fas fa-bolt"></i>
                        Thao tác nhanh
                    </h4>
                </div>
                <div class="card-body">
                    <div class="action-grid">
                        <a href="{{ '~/Training' | href }}" class="action-item">
                            <i class="fas fa-graduation-cap"></i>
                            <span>Khóa học</span>
                        </a>
                        <a href="{{ '~/Application' | href }}" class="action-item">
                            <i class="fas fa-mobile-alt"></i>
                            <span>Ứng dụng</span>
                        </a>
                        <a href="{{ '~/Payment/History' | href }}" class="action-item">
                            <i class="fas fa-credit-card"></i>
                            <span>Thanh toán</span>
                        </a>
                        <a href="{{ '~/Support' | href }}" class="action-item">
                            <i class="fas fa-headset"></i>
                            <span>Hỗ trợ</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card activity-card">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="fas fa-clock"></i>
                        Hoạt động gần đây
                    </h4>
                </div>
                <div class="card-body">
                    {% if Model.RecentActivities.size > 0 %}
                        <div class="activity-timeline">
                            {% for activity in Model.RecentActivities limit: 10 %}
                                <div class="activity-item">
                                    <div class="activity-icon {{ activity.Type | downcase }}">
                                        {% case activity.Type %}
                                            {% when 'Course' %}
                                                <i class="fas fa-graduation-cap"></i>
                                            {% when 'Payment' %}
                                                <i class="fas fa-credit-card"></i>
                                            {% when 'Application' %}
                                                <i class="fas fa-mobile-alt"></i>
                                            {% when 'Comment' %}
                                                <i class="fas fa-comment"></i>
                                            {% else %}
                                                <i class="fas fa-info-circle"></i>
                                        {% endcase %}
                                    </div>
                                    <div class="activity-content">
                                        <div class="activity-title">{{ activity.Title }}</div>
                                        <div class="activity-description">{{ activity.Description }}</div>
                                        <div class="activity-time">{{ activity.CreatedAt | date: "dd/MM/yyyy HH:mm" }}</div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="text-center mt-3">
                            <a href="{{ '~/Account/Activity' | href }}" class="btn btn-outline">Xem tất cả hoạt động</a>
                        </div>
                    {% else %}
                        <div class="empty-state">
                            <i class="fas fa-clock"></i>
                            <h5>Chưa có hoạt động nào</h5>
                            <p>Bắt đầu khám phá các khóa học và dịch vụ của chúng tôi!</p>
                            <a href="{{ '~/Training' | href }}" class="btn btn-primary">Khám phá ngay</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.user-dashboard .card {
    margin-bottom: 1.5rem;
    transition: var(--transition);
}

.user-profile-card .user-avatar {
    margin-bottom: 1rem;
}

.avatar-img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--primary-color);
}

.avatar-placeholder {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background-color: var(--bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    font-size: 2rem;
    color: var(--text-muted);
}

.user-stats {
    display: flex;
    justify-content: space-around;
    margin: 1.5rem 0;
    padding: 1rem 0;
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
}

.stat-item {
    text-align: center;
}

.stat-value {
    display: block;
    font-size: var(--font-size-2xl);
    font-weight: 700;
    color: var(--primary-color);
}

.stat-label {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
}

.wallet-balance {
    text-align: center;
    margin-bottom: 1.5rem;
}

.balance-label {
    display: block;
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    margin-bottom: 0.5rem;
}

.balance-amount {
    display: block;
    font-size: var(--font-size-2xl);
    font-weight: 700;
    color: var(--success-color);
}

.wallet-actions {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    margin-bottom: 1.5rem;
}

.recent-transactions h5 {
    font-size: var(--font-size-base);
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-color);
}

.transaction-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border-light);
}

.transaction-item:last-child {
    border-bottom: none;
}

.transaction-info {
    display: flex;
    flex-direction: column;
}

.transaction-type {
    font-weight: 500;
    font-size: var(--font-size-sm);
}

.transaction-date {
    font-size: var(--font-size-xs);
    color: var(--text-muted);
}

.transaction-amount {
    font-weight: 600;
}

.transaction-amount.deposit {
    color: var(--success-color);
}

.transaction-amount.withdraw {
    color: var(--error-color);
}

.action-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
}

.action-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
    background-color: var(--bg-secondary);
    border-radius: var(--border-radius);
    text-decoration: none;
    color: var(--text-primary);
    transition: var(--transition);
}

.action-item:hover {
    background-color: var(--primary-color);
    color: var(--text-light);
    text-decoration: none;
    transform: translateY(-2px);
}

.action-item i {
    font-size: var(--font-size-xl);
    margin-bottom: 0.5rem;
}

.activity-timeline {
    position: relative;
}

.activity-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 1.5rem;
    position: relative;
}

.activity-item:last-child {
    margin-bottom: 0;
}

.activity-icon {
    flex: 0 0 40px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    color: var(--text-light);
}

.activity-icon.course {
    background-color: var(--primary-color);
}

.activity-icon.payment {
    background-color: var(--success-color);
}

.activity-icon.application {
    background-color: var(--info-color);
}

.activity-icon.comment {
    background-color: var(--warning-color);
}

.activity-content {
    flex: 1;
}

.activity-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.activity-description {
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    margin-bottom: 0.25rem;
}

.activity-time {
    font-size: var(--font-size-xs);
    color: var(--text-muted);
}

.empty-state {
    text-align: center;
    padding: 3rem 1rem;
}

.empty-state i {
    font-size: 3rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
}

.empty-state h5 {
    margin-bottom: 0.5rem;
}

.empty-state p {
    color: var(--text-muted);
    margin-bottom: 1.5rem;
}

.no-transactions {
    text-align: center;
    color: var(--text-muted);
    font-style: italic;
    padding: 1rem 0;
}

@media (max-width: 768px) {
    .user-stats {
        flex-direction: column;
        gap: 1rem;
    }
    
    .wallet-actions {
        flex-direction: column;
    }
    
    .action-grid {
        grid-template-columns: 1fr;
    }
    
    .activity-item {
        flex-direction: column;
        text-align: center;
    }
    
    .activity-icon {
        margin: 0 auto 1rem auto;
    }
}
</style>