<!-- JavaScript -->
<script>
let currentStep = 1;
const totalSteps = 4;

document.addEventListener('DOMContentLoaded', function() {
    initializeForm();
    setupFileUploads();
    setupFormValidation();
    updateProgress();
});

function initializeForm() {
    // Cover letter character counter
    const coverLetter = document.getElementById('coverLetter');
    const counter = document.getElementById('cover-letter-count');
    
    coverLetter.addEventListener('input', function() {
        const count = this.value.length;
        counter.textContent = count;
        
        if (count > 1000) {
            counter.classList.add('text-danger');
        } else {
            counter.classList.remove('text-danger');
        }
    });
    
    // Initialize character count
    counter.textContent = coverLetter.value.length;
}

function setupFileUploads() {
    // CV File Upload
    const cvFile = document.getElementById('cvFile');
    const cvUploadArea = document.getElementById('cv-upload-area');
    
    cvFile.addEventListener('change', function() {
        handleFileUpload(this, 'cv');
    });
    
    // Portfolio File Upload
    const portfolioFile = document.getElementById('portfolioFile');
    const portfolioUploadArea = document.getElementById('portfolio-upload-area');
    
    portfolioFile.addEventListener('change', function() {
        handleFileUpload(this, 'portfolio');
    });
    
    // Drag and drop functionality
    [cvUploadArea, portfolioUploadArea].forEach(area => {
        area.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.classList.add('dragover');
        });
        
        area.addEventListener('dragleave', function(e) {
            e.preventDefault();
            this.classList.remove('dragover');
        });
        
        area.addEventListener('drop', function(e) {
            e.preventDefault();
            this.classList.remove('dragover');
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                const input = this.querySelector('input[type="file"]');
                input.files = files;
                handleFileUpload(input, area.id.includes('cv') ? 'cv' : 'portfolio');
            }
        });
    });
}

function handleFileUpload(input, type) {
    const file = input.files[0];
    if (!file) return;
    
    // Validate file size
    const maxSize = type === 'cv' ? 5 * 1024 * 1024 : 10 * 1024 * 1024; // 5MB for CV, 10MB for portfolio
    if (file.size > maxSize) {
        alert(`File size too large. Maximum size is ${maxSize / (1024 * 1024)}MB.`);
        input.value = '';
        return;
    }
    
    // Show success state
    const uploadArea = document.getElementById(`${type}-upload-area`);
    const placeholder = uploadArea.querySelector('.upload-placeholder');
    const success = uploadArea.querySelector('.upload-success');
    const fileName = uploadArea.querySelector(`#${type}-file-name`);
    
    placeholder.classList.add('d-none');
    success.classList.remove('d-none');
    fileName.textContent = file.name;
}

function removeFile(type) {
    const input = document.getElementById(`${type}File`);
    const uploadArea = document.getElementById(`${type}-upload-area`);
    const placeholder = uploadArea.querySelector('.upload-placeholder');
    const success = uploadArea.querySelector('.upload-success');
    
    input.value = '';
    placeholder.classList.remove('d-none');
    success.classList.add('d-none');
}

function setupFormValidation() {
    const form = document.getElementById('job-application-form');
    
    form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        if (this.checkValidity()) {
            submitApplication();
        } else {
            this.classList.add('was-validated');
        }
    });
}

function nextStep() {
    if (validateCurrentStep()) {
        if (currentStep < totalSteps) {
            document.getElementById(`step-${currentStep}`).classList.remove('active');
            currentStep++;
            document.getElementById(`step-${currentStep}`).classList.add('active');
            updateProgress();
            
            if (currentStep === 4) {
                updateReview();
            }
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    }
}

function prevStep() {
    if (currentStep > 1) {
        document.getElementById(`step-${currentStep}`).classList.remove('active');
        currentStep--;
        document.getElementById(`step-${currentStep}`).classList.add('active');
        updateProgress();
        
        // Scroll to top
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }
}

function validateCurrentStep() {
    const currentStepElement = document.getElementById(`step-${currentStep}`);
    const requiredFields = currentStepElement.querySelectorAll('[required]');
    let isValid = true;
    
    requiredFields.forEach(field => {
        if (!field.checkValidity()) {
            field.classList.add('is-invalid');
            isValid = false;
        } else {
            field.classList.remove('is-invalid');
            field.classList.add('is-valid');
        }
    });
    
    if (!isValid) {
        currentStepElement.classList.add('was-validated');
    }
    
    return isValid;
}

function updateProgress() {
    const progress = (currentStep / totalSteps) * 100;
    document.getElementById('form-progress').style.width = `${progress}%`;
}

function updateReview() {
    // Personal Information
    const personalInfo = `
        <p><strong>Name:</strong> ${document.getElementById('firstName').value} ${document.getElementById('lastName').value}</p>
        <p><strong>Email:</strong> ${document.getElementById('email').value}</p>
        <p><strong>Phone:</strong> ${document.getElementById('phone').value}</p>
        <p><strong>Address:</strong> ${document.getElementById('address').value || 'Not provided'}</p>
    `;
    document.getElementById('review-personal').innerHTML = personalInfo;
    
    // Experience
    const experienceInfo = `
        <p><strong>Current Position:</strong> ${document.getElementById('currentPosition').value || 'Not provided'}</p>
        <p><strong>Experience:</strong> ${document.getElementById('experienceYears').value}</p>
        <p><strong>Expected Salary:</strong> ${document.getElementById('expectedSalary').value || 'Not specified'}</p>
        <p><strong>Skills:</strong> ${document.getElementById('skills').value}</p>
    `;
    document.getElementById('review-experience').innerHTML = experienceInfo;
    
    // Documents
    const cvFile = document.getElementById('cvFile').files[0];
    const portfolioFile = document.getElementById('portfolioFile').files[0];
    const documentsInfo = `
        <p><strong>CV/Resume:</strong> ${cvFile ? cvFile.name : 'Not uploaded'}</p>
        <p><strong>Portfolio:</strong> ${portfolioFile ? portfolioFile.name : 'Not uploaded'}</p>
    `;
    document.getElementById('review-documents').innerHTML = documentsInfo;
    
    // Cover Letter
    const coverLetterText = document.getElementById('coverLetter').value;
    document.getElementById('review-cover-letter').innerHTML = `<p>${coverLetterText.substring(0, 200)}${coverLetterText.length > 200 ? '...' : ''}</p>`;
}

function submitApplication() {
    const submitBtn = document.querySelector('button[type="submit"]');
    const spinner = submitBtn.querySelector('.spinner-border');
    
    // Show loading state
    submitBtn.disabled = true;
    spinner.classList.remove('d-none');
    
    // Create FormData
    const formData = new FormData(document.getElementById('job-application-form'));
    
    // Submit application
    fetch('/jobs/apply', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Redirect to success page
            window.location.href = `/jobs/apply/success?id=${data.applicationId}`;
        } else {
            throw new Error(data.message || 'Application submission failed');
        }
    })
    .catch(error => {
        console.error('Error submitting application:', error);
        alert('Error submitting application. Please try again.');
    })
    .finally(() => {
        submitBtn.disabled = false;
        spinner.classList.add('d-none');
    });
}
</script>