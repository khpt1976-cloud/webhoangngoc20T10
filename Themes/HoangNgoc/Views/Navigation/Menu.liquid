    <div class="container-fluid">
        <div class="row w-100 text-center">
            <div class="col">
                <a href="{{ '~/' | href }}" class="nav-link {{ Model.IsHomePage | if: 'active', '' }}">
                    <i class="fas fa-home" aria-hidden="true"></i>
                    <small class="d-block">Trang chủ</small>
                </a>
            </div>
            <div class="col">
                <a href="{{ '~/news' | href }}" class="nav-link {{ Model.CurrentUrl | contains: '/news' | if: 'active', '' }}">
                    <i class="fas fa-newspaper" aria-hidden="true"></i>
                    <small class="d-block">Tin tức</small>
                </a>
            </div>
            <div class="col">
                <a href="{{ '~/training' | href }}" class="nav-link {{ Model.CurrentUrl | contains: '/training' | if: 'active', '' }}">
                    <i class="fas fa-graduation-cap" aria-hidden="true"></i>
                    <small class="d-block">Đào tạo</small>
                </a>
            </div>
            <div class="col">
                <a href="{{ '~/application' | href }}" class="nav-link {{ Model.CurrentUrl | contains: '/application' | if: 'active', '' }}">
                    <i class="fas fa-mobile-alt" aria-hidden="true"></i>
                    <small class="d-block">Ứng dụng</small>
                </a>
            </div>
            <div class="col">
                {% if User.Identity.IsAuthenticated %}
                <a href="{{ '~/profile' | href }}" class="nav-link">
                    <i class="fas fa-user" aria-hidden="true"></i>
                    <small class="d-block">Hồ sơ</small>
                </a>
                {% else %}
                <a href="{{ '~/login' | href }}" class="nav-link">
                    <i class="fas fa-sign-in-alt" aria-hidden="true"></i>
                    <small class="d-block">Đăng nhập</small>
                </a>
                {% endif %}
            </div>
        </div>
    </div>
</nav>