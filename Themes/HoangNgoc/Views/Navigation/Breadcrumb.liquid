{% comment %}
HoangNgoc Professional Theme v2.0
Breadcrumb Navigation
{% endcomment %}

{% if Model.Breadcrumbs and Model.Breadcrumbs.size > 1 %}
<nav aria-label="breadcrumb" class="breadcrumb-nav">
    <div class="container">
        <ol class="breadcrumb bg-light rounded p-3 mb-4">
            {% for breadcrumb in Model.Breadcrumbs %}
                {% if forloop.last %}
                    <li class="breadcrumb-item active" aria-current="page">
                        <i class="{{ breadcrumb.Icon | default: 'fas fa-file-alt' }} me-1" aria-hidden="true"></i>
                        {{ breadcrumb.Text }}
                    </li>
                {% else %}
                    <li class="breadcrumb-item">
                        <a href="{{ breadcrumb.Url | href }}" class="text-decoration-none">
                            <i class="{{ breadcrumb.Icon | default: 'fas fa-folder' }} me-1" aria-hidden="true"></i>
                            {{ breadcrumb.Text }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        </ol>
    </div>
</nav>
{% endif %}

<!-- Alternative breadcrumb for specific content types -->
{% case Model.ContentType %}
