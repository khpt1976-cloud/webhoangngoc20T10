@model IEnumerable<ContentItem>
@{
    ViewData["Title"] = T["Job Postings"];
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@T["Job Postings"]</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> @T["Create New Job"]
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>@T["Job ID"]</th>
                                    <th>@T["Job Title"]</th>
                                    <th>@T["Department"]</th>
                                    <th>@T["Location"]</th>
                                    <th>@T["Employment Type"]</th>
                                    <th>@T["Status"]</th>
                                    <th>@T["Posting Date"]</th>
                                    <th>@T["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var jobPart = item.As<JobPostingPart>();
                                    <tr>
                                        <td>@jobPart?.JobId.Text</td>
                                        <td>@jobPart?.JobTitle.Text</td>
                                        <td>@jobPart?.Department.Text</td>
                                        <td>@jobPart?.Location.Text</td>
                                        <td>@jobPart?.EmploymentType.Text</td>
                                        <td>
                                            @if (jobPart?.IsActive.Value == true)
                                            {
                                                <span class="badge badge-success">@T["Active"]</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">@T["Inactive"]</span>
                                            }
                                            @if (jobPart?.IsFeatured.Value == true)
                                            {
                                                <span class="badge badge-warning">@T["Featured"]</span>
                                            }
                                        </td>
                                        <td>@jobPart?.PostingDate.Value?.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@jobPart?.JobId.Text" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i> @T["View"]
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@jobPart?.JobId.Text" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> @T["Edit"]
                                            </a>
                                            <a asp-action="Applications" asp-route-jobId="@jobPart?.JobId.Text" class="btn btn-sm btn-success">
                                                <i class="fas fa-users"></i> @T["Applications"]
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@jobPart?.JobId.Text" method="post" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('@T["Are you sure you want to delete this job posting?"]')">
                                                    <i class="fas fa-trash"></i> @T["Delete"]
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> @T["No job postings found."]
                    </div>
                }
            </div>
        </div>
    </div>
</div>