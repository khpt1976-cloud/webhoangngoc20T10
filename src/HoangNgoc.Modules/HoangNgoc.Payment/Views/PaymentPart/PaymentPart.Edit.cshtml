@model HoangNgoc.Payment.ViewModels.PaymentPartViewModel

<fieldset class="form-group">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PaymentId" class="form-label">@T["Payment ID"]</label>
                <input asp-for="PaymentId" class="form-control" />
                <span asp-validation-for="PaymentId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="OrderId" class="form-label">@T["Order ID"]</label>
                <input asp-for="OrderId" class="form-control" />
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Amount" class="form-label">@T["Amount"]</label>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Currency" class="form-label">@T["Currency"]</label>
                <select asp-for="Currency" class="form-control">
                    <option value="VND">VND</option>
                    <option value="USD">USD</option>
                    <option value="EUR">EUR</option>
                </select>
            </div>
            
            <div class="form-group">
                <label asp-for="PaymentMethod" class="form-label">@T["Payment Method"]</label>
                <select asp-for="PaymentMethod" class="form-control">
                    <option value="">@T["Select Payment Method"]</option>
                    <option value="Credit Card">Credit Card</option>
                    <option value="Bank Transfer">Bank Transfer</option>
                    <option value="PayPal">PayPal</option>
                    <option value="Momo">Momo</option>
                    <option value="ZaloPay">ZaloPay</option>
                    <option value="VNPay">VNPay</option>
                </select>
            </div>
            
            <div class="form-group">
                <label asp-for="PaymentStatus" class="form-label">@T["Payment Status"]</label>
                <select asp-for="PaymentStatus" class="form-control">
                    <option value="Pending">Pending</option>
                    <option value="Processing">Processing</option>
                    <option value="Completed">Completed</option>
                    <option value="Failed">Failed</option>
                    <option value="Cancelled">Cancelled</option>
                    <option value="Refunded">Refunded</option>
                </select>
            </div>
            
            <div class="form-group">
                <label asp-for="TransactionId" class="form-label">@T["Transaction ID"]</label>
                <input asp-for="TransactionId" class="form-control" />
            </div>
            
            <div class="form-group">
                <label asp-for="PaymentGateway" class="form-label">@T["Payment Gateway"]</label>
                <input asp-for="PaymentGateway" class="form-control" />
            </div>
            
            <div class="form-group">
                <label asp-for="PaymentDate" class="form-label">@T["Payment Date"]</label>
                <input asp-for="PaymentDate" class="form-control" type="datetime-local" />
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CustomerEmail" class="form-label">@T["Customer Email"]</label>
                <input asp-for="CustomerEmail" class="form-control" type="email" />
            </div>
            
            <div class="form-group">
                <label asp-for="CustomerPhone" class="form-label">@T["Customer Phone"]</label>
                <input asp-for="CustomerPhone" class="form-control" />
            </div>
            
            <div class="form-group">
                <label asp-for="BillingAddress" class="form-label">@T["Billing Address"]</label>
                <textarea asp-for="BillingAddress" class="form-control" rows="3"></textarea>
            </div>
            
            <div class="form-group">
                <label asp-for="PaymentDescription" class="form-label">@T["Payment Description"]</label>
                <textarea asp-for="PaymentDescription" class="form-control" rows="3"></textarea>
            </div>
            
            <div class="form-group">
                <label asp-for="PaymentNotes" class="form-label">@T["Payment Notes"]</label>
                <textarea asp-for="PaymentNotes" class="form-control" rows="3"></textarea>
            </div>
            
            <div class="form-check">
                <input asp-for="IsRefunded" class="form-check-input" type="checkbox" />
                <label asp-for="IsRefunded" class="form-check-label">@T["Is Refunded"]</label>
            </div>
            
            <div class="form-group">
                <label asp-for="RefundAmount" class="form-label">@T["Refund Amount"]</label>
                <input asp-for="RefundAmount" class="form-control" type="number" step="0.01" />
            </div>
            
            <div class="form-group">
                <label asp-for="RefundDate" class="form-label">@T["Refund Date"]</label>
                <input asp-for="RefundDate" class="form-control" type="datetime-local" />
            </div>
        </div>
    </div>
</fieldset>