{% comment %}
News List View - HoangNgoc Professional Theme v2.0
Bootstrap 5.3 Enhanced News listing with modern components
{% endcomment %}

<div class="news-list-page" data-animate="fade-in">
    <div class="container py-4">
        <!-- Page Header -->
        <div class="row align-items-center mb-5">
            <div class="col-md-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ '~/' | href }}">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Tin tức</li>
                    </ol>
                </nav>
                <h1 class="display-5 fw-bold mb-3">Tin tức & Sự kiện</h1>
                <p class="lead text-muted">Cập nhật những thông tin mới nhất về công nghệ, đào tạo và sự kiện</p>
            </div>
            <div class="col-md-4 text-end">
                <div class="d-flex gap-2 justify-content-end">
                    <a href="{{ '~/News/Subscribe' | href }}" class="btn btn-outline-primary">
                        <i class="fas fa-bell me-2"></i>Đăng ký nhận tin
                    </a>
                    <a href="{{ '~/News/RSS' | href }}" class="btn btn-outline-secondary">
                        <i class="fas fa-rss me-2"></i>RSS
                    </a>
                </div>
            </div>
        </div>

        <!-- Featured News -->
        {% if Model.FeaturedNews.size > 0 %}
            <div class="featured-section">
                <h2 class="section-title">
                    <i class="fas fa-star"></i>
                    Tin nổi bật
                </h2>
                <div class="featured-news-slider">
                    {% for news in Model.FeaturedNews limit: 3 %}
                        <div class="featured-news-item" data-animate="slide-up">
                            <div class="news-image">
                                {% if news.FeaturedImageUrl %}
                                    <img src="{{ news.FeaturedImageUrl | asset_url }}" alt="{{ news.Title }}" loading="lazy">
                                {% else %}
                                    <div class="image-placeholder">
                                        <i class="fas fa-newspaper"></i>
                                    </div>
                                {% endif %}
                                <div class="news-overlay">
                                    <div class="news-category">{{ news.Category.Name }}</div>
                                </div>
                            </div>
                            <div class="news-content">
                                <div class="news-meta">
                                    <span class="news-date">
                                        <i class="fas fa-calendar"></i>
                                        {{ news.PublishedDate | date: "dd/MM/yyyy" }}
                                    </span>
                                    <span class="news-author">
                                        <i class="fas fa-user"></i>
                                        {{ news.Author.Name }}
                                    </span>
                                    <span class="news-views">
                                        <i class="fas fa-eye"></i>
                                        {{ news.ViewsCount | default: 0 }}
                                    </span>
                                </div>
                                <h3 class="news-title">
                                    <a href="{{ news.Url | href }}">{{ news.Title }}</a>
                                </h3>
                                <p class="news-excerpt">{{ news.Excerpt | truncate: 150 }}</p>
                                <div class="news-tags">
                                    {% for tag in news.Tags limit: 3 %}
                                        <span class="tag">{{ tag.Name }}</span>
                                    {% endfor %}
                                </div>
                                <a href="{{ news.Url | href }}" class="read-more-btn">
                                    Đọc tiếp <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        <!-- Filters and Search -->
        <div class="filters-section">
            <div class="row">
                <div class="col-md-6">
                    <div class="search-box">
                        <form method="get" action="{{ Request.Path }}">
                            <div class="input-group">
                                <input type="text" name="search" class="form-control search-input" 
                                       placeholder="Tìm kiếm tin tức..." 
                                       value="{{ Request.Query.search }}">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="filter-controls">
                        <select name="category" class="form-control filter-select" onchange="this.form.submit()">
                            <option value="">Tất cả danh mục</option>
                            {% for category in Model.Categories %}
                                <option value="{{ category.Id }}" 
                                        {% if Request.Query.category == category.Id %}selected{% endif %}>
                                    {{ category.Name }}
                                </option>
                            {% endfor %}
                        </select>
                        <select name="sort" class="form-control filter-select" onchange="this.form.submit()">
                            <option value="newest" {% if Request.Query.sort == 'newest' %}selected{% endif %}>Mới nhất</option>
                            <option value="popular" {% if Request.Query.sort == 'popular' %}selected{% endif %}>Phổ biến</option>
                            <option value="trending" {% if Request.Query.sort == 'trending' %}selected{% endif %}>Xu hướng</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- News Grid -->
        <div class="news-content">
            <div class="row">
                <!-- Main Content -->
                <div class="col-lg-8">
                    {% if Model.News.size > 0 %}
                        <div class="news-grid">
                            {% for news in Model.News %}
                                <article class="news-card" data-animate="slide-up">
                                    <div class="news-image">
                                        {% if news.FeaturedImageUrl %}
                                            <img src="{{ news.FeaturedImageUrl | asset_url }}" alt="{{ news.Title }}" loading="lazy">
                                        {% else %}
                                            <div class="image-placeholder">
                                                <i class="fas fa-newspaper"></i>
                                            </div>
                                        {% endif %}
                                        <div class="news-badges">
                                            {% if news.IsHot %}
                                                <span class="badge hot">
                                                    <i class="fas fa-fire"></i> Hot
                                                </span>
                                            {% endif %}
                                            {% if news.IsBreaking %}
                                                <span class="badge breaking">
                                                    <i class="fas fa-bolt"></i> Nóng
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    
                                    <div class="news-content">
                                        <div class="news-header">
                                            <div class="news-category">
                                                <a href="{{ news.Category.Url | href }}">{{ news.Category.Name }}</a>
                                            </div>
                                            <div class="news-meta">
                                                <span class="news-date">{{ news.PublishedDate | date: "dd/MM/yyyy" }}</span>
                                                <span class="news-reading-time">{{ news.ReadingTime | default: 5 }} phút đọc</span>
                                            </div>
                                        </div>
                                        
                                        <h3 class="news-title">
                                            <a href="{{ news.Url | href }}">{{ news.Title }}</a>
                                        </h3>
                                        
                                        <p class="news-excerpt">{{ news.Excerpt | truncate: 120 }}</p>
                                        
                                        <div class="news-footer">
                                            <div class="author-info">
                                                <div class="author-avatar">
                                                    {% if news.Author.Avatar %}
                                                        <img src="{{ news.Author.Avatar | asset_url }}" alt="{{ news.Author.Name }}">
                                                    {% else %}
                                                        <div class="avatar-placeholder">
                                                            <i class="fas fa-user"></i>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                                <div class="author-details">
                                                    <span class="author-name">{{ news.Author.Name }}</span>
                                                    <span class="author-title">{{ news.Author.Title | default: "Tác giả" }}</span>
                                                </div>
                                            </div>
                                            
                                            <div class="news-stats">
                                                <span class="stat-item">
                                                    <i class="fas fa-eye"></i>
                                                    {{ news.ViewsCount | default: 0 }}
                                                </span>
                                                <span class="stat-item">
                                                    <i class="fas fa-comments"></i>
                                                    {{ news.CommentsCount | default: 0 }}
                                                </span>
                                                <span class="stat-item">
                                                    <i class="fas fa-heart"></i>
                                                    {{ news.LikesCount | default: 0 }}
                                                </span>
                                            </div>
                                        </div>
                                        
                                        {% if news.Tags.size > 0 %}
                                            <div class="news-tags">
                                                {% for tag in news.Tags limit: 3 %}
                                                    <a href="{{ tag.Url | href }}" class="tag">{{ tag.Name }}</a>
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </article>
                            {% endfor %}
                        </div>
                        
                        <!-- Pagination -->
                        {% if Model.Pager.TotalPages > 1 %}
                            <div class="pagination-wrapper">
                                <nav aria-label="News pagination">
                                    <ul class="pagination">
                                        {% if Model.Pager.HasPreviousPage %}
                                            <li class="page-item">
                                                <a class="page-link" href="{{ Model.Pager.PreviousPageUrl }}">
                                                    <i class="fas fa-chevron-left"></i> Trước
                                                </a>
                                            </li>
                                        {% endif %}
                                        
                                        {% for page in Model.Pager.Pages %}
                                            <li class="page-item {% if page.IsCurrent %}active{% endif %}">
                                                <a class="page-link" href="{{ page.Url }}">{{ page.Number }}</a>
                                            </li>
                                        {% endfor %}
                                        
                                        {% if Model.Pager.HasNextPage %}
                                            <li class="page-item">
                                                <a class="page-link" href="{{ Model.Pager.NextPageUrl }}">
                                                    Sau <i class="fas fa-chevron-right"></i>
                                                </a>
                                            </li>
                                        {% endif %}
                                    </ul>
                                </nav>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="empty-state">
                            <i class="fas fa-newspaper"></i>
                            <h3>Không tìm thấy tin tức nào</h3>
                            <p>Thử thay đổi bộ lọc hoặc từ khóa tìm kiếm để xem thêm tin tức.</p>
                            <a href="{{ '~/News' | href }}" class="btn btn-primary">Xem tất cả tin tức</a>
                        </div>
                    {% endif %}
                </div>
                
                <!-- Sidebar -->
                <div class="col-lg-4">
                    <div class="news-sidebar">
                        <!-- Popular News -->
                        {% if Model.PopularNews.size > 0 %}
                            <div class="sidebar-widget">
                                <h3 class="widget-title">
                                    <i class="fas fa-fire"></i>
                                    Tin phổ biến
                                </h3>
                                <div class="popular-news-list">
                                    {% for news in Model.PopularNews limit: 5 %}
                                        <div class="popular-news-item">
                                            <div class="news-thumbnail">
                                                {% if news.FeaturedImageUrl %}
                                                    <img src="{{ news.FeaturedImageUrl | asset_url }}" alt="{{ news.Title }}">
                                                {% else %}
                                                    <div class="thumbnail-placeholder">
                                                        <i class="fas fa-newspaper"></i>
                                                    </div>
                                                {% endif %}
                                            </div>
                                            <div class="news-info">
                                                <h4 class="news-title">
                                                    <a href="{{ news.Url | href }}">{{ news.Title | truncate: 60 }}</a>
                                                </h4>
                                                <div class="news-meta">
                                                    <span class="news-date">{{ news.PublishedDate | date: "dd/MM" }}</span>
                                                    <span class="news-views">{{ news.ViewsCount }} lượt xem</span>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}
                        
                        <!-- Categories -->
                        {% if Model.Categories.size > 0 %}
                            <div class="sidebar-widget">
                                <h3 class="widget-title">
                                    <i class="fas fa-folder"></i>
                                    Danh mục
                                </h3>
                                <div class="categories-list">
                                    {% for category in Model.Categories %}
                                        <a href="{{ category.Url | href }}" class="category-item">
                                            <span class="category-name">{{ category.Name }}</span>
                                            <span class="category-count">{{ category.NewsCount }}</span>
                                        </a>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}
                        
                        <!-- Tags Cloud -->
                        {% if Model.PopularTags.size > 0 %}
                            <div class="sidebar-widget">
                                <h3 class="widget-title">
                                    <i class="fas fa-tags"></i>
                                    Thẻ phổ biến
                                </h3>
                                <div class="tags-cloud">
                                    {% for tag in Model.PopularTags %}
                                        <a href="{{ tag.Url | href }}" class="tag-item" 
                                           style="font-size: {{ tag.Weight | times: 0.8 | plus: 0.8 }}rem;">
                                            {{ tag.Name }}
                                        </a>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}
                        
                        <!-- Newsletter Signup -->
                        <div class="sidebar-widget newsletter-widget">
                            <h3 class="widget-title">
                                <i class="fas fa-envelope"></i>
                                Đăng ký nhận tin
                            </h3>
                            <p class="widget-description">Nhận thông báo về những tin tức mới nhất</p>
                            <form class="newsletter-form" method="post" action="{{ '~/News/Subscribe' | href }}">
                                <div class="form-group">
                                    <input type="email" name="email" class="form-control" 
                                           placeholder="Địa chỉ email của bạn" required>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">
                                    <i class="fas fa-paper-plane"></i>
                                    Đăng ký
                                </button>
                            </form>
                        </div>
                        
                        <!-- Social Media -->
                        <div class="sidebar-widget social-widget">
                            <h3 class="widget-title">
                                <i class="fas fa-share-alt"></i>
                                Theo dõi chúng tôi
                            </h3>
                            <div class="social-links">
                                <a href="#" class="social-link facebook">
                                    <i class="fab fa-facebook-f"></i>
                                    <span>Facebook</span>
                                </a>
                                <a href="#" class="social-link twitter">
                                    <i class="fab fa-twitter"></i>
                                    <span>Twitter</span>
                                </a>
                                <a href="#" class="social-link linkedin">
                                    <i class="fab fa-linkedin-in"></i>
                                    <span>LinkedIn</span>
                                </a>
                                <a href="#" class="social-link youtube">
                                    <i class="fab fa-youtube"></i>
                                    <span>YouTube</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
