{% comment %}
    Messages Shape Template - HoangNgoc Theme v2.0
    Displays system messages (success, error, warning, info)
{% endcomment %}

{% if Model.Messages and Model.Messages.size > 0 %}
    <div class="messages-container mb-4" role="alert" aria-live="polite">
        {% for message in Model.Messages %}
            {% assign alertClass = "alert-info" %}
            {% assign iconClass = "fas fa-info-circle" %}
            
            {% case message.Type %}
                {% when "Success" %}
                    {% assign alertClass = "alert-success" %}
                    {% assign iconClass = "fas fa-check-circle" %}
                {% when "Error" %}
                    {% assign alertClass = "alert-danger" %}
                    {% assign iconClass = "fas fa-exclamation-circle" %}
                {% when "Warning" %}
                    {% assign alertClass = "alert-warning" %}
                    {% assign iconClass = "fas fa-exclamation-triangle" %}
                {% when "Information" %}
                    {% assign alertClass = "alert-info" %}
                    {% assign iconClass = "fas fa-info-circle" %}
            {% endcase %}
            
            <div class="alert {{ alertClass }} alert-dismissible fade show" role="alert">
                <i class="{{ iconClass }} me-2"></i>
                <span class="message-content">{{ message.Html }}</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng thông báo"></button>
            </div>
        {% endfor %}
    </div>
{% endif %}