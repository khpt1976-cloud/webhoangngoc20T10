@model IEnumerable<ContentItem>
@{
    ViewData["Title"] = T["Job Applications"];
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@T["Job Applications"]</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> @T["Create New Application"]
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>@T["Application ID"]</th>
                                    <th>@T["Job Title"]</th>
                                    <th>@T["Applicant Name"]</th>
                                    <th>@T["Email"]</th>
                                    <th>@T["Status"]</th>
                                    <th>@T["Application Date"]</th>
                                    <th>@T["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var applicationPart = item.As<JobApplicationPart>();
                                    <tr>
                                        <td>@applicationPart?.ApplicationId.Text</td>
                                        <td>@applicationPart?.JobTitle.Text</td>
                                        <td>@applicationPart?.ApplicantName.Text</td>
                                        <td>@applicationPart?.ApplicantEmail.Text</td>
                                        <td>
                                            <span class="badge badge-info">@applicationPart?.ApplicationStatus.Text</span>
                                        </td>
                                        <td>@applicationPart?.ApplicationDate.Value?.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@applicationPart?.ApplicationId.Text" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i> @T["View"]
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@applicationPart?.ApplicationId.Text" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> @T["Edit"]
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@applicationPart?.ApplicationId.Text" method="post" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('@T["Are you sure you want to delete this application?"]')">
                                                    <i class="fas fa-trash"></i> @T["Delete"]
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> @T["No job applications found."]
                    </div>
                }
            </div>
        </div>
    </div>
</div>