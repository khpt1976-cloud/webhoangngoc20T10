@model IEnumerable<ContentItem>
@{
    ViewData["Title"] = T["Candidates"];
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@T["Candidates"]</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> @T["Add New Candidate"]
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>@T["Candidate ID"]</th>
                                    <th>@T["Full Name"]</th>
                                    <th>@T["Email"]</th>
                                    <th>@T["Phone"]</th>
                                    <th>@T["Current Position"]</th>
                                    <th>@T["Experience"]</th>
                                    <th>@T["Status"]</th>
                                    <th>@T["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var candidatePart = item.As<CandidatePart>();
                                    <tr>
                                        <td>@candidatePart?.CandidateId.Text</td>
                                        <td>@candidatePart?.FullName.Text</td>
                                        <td>@candidatePart?.Email.Text</td>
                                        <td>@candidatePart?.Phone.Text</td>
                                        <td>@candidatePart?.CurrentPosition.Text</td>
                                        <td>@candidatePart?.TotalExperience.Text</td>
                                        <td>
                                            @if (candidatePart?.IsAvailable.Value == true)
                                            {
                                                <span class="badge badge-success">@T["Available"]</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">@T["Not Available"]</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@candidatePart?.CandidateId.Text" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i> @T["View"]
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@candidatePart?.CandidateId.Text" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> @T["Edit"]
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@candidatePart?.CandidateId.Text" method="post" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('@T["Are you sure you want to delete this candidate?"]')">
                                                    <i class="fas fa-trash"></i> @T["Delete"]
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> @T["No candidates found."]
                    </div>
                }
            </div>
        </div>
    </div>
</div>