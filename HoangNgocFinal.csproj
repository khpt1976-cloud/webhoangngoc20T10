    <ProjectReference Include="Modules\HoangNgoc.Comment\HoangNgoc.Comment.csproj" />
    <ProjectReference Include="Modules\HoangNgoc.Payment\HoangNgoc.Payment.csproj" />
    <ProjectReference Include="Modules\HoangNgoc.Training\HoangNgoc.Training.csproj" />
